<Window x:Class="Coins_Database.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coins_Database.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        FontSize="16"
        Height="600" Width="800" MinWidth="800" MinHeight="600" MaxWidth="800" MaxHeight="600"
        BorderThickness="2" BorderBrush="#FF5D11A0" WindowStyle="None" 
        ResizeMode="CanResizeWithGrip" 
        AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <Style TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignTabRadioButton}"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Background="#FF5D11A0" Grid.Row="0" Mode="PrimaryMid" Margin="0,0,-1.2,0" >
            <StackPanel x:Name="WindowHeader" Orientation="Horizontal" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="User" Margin="20 0 5 0" Width="24" Height="24" VerticalAlignment="Center"/>
                <TextBlock x:Name="CurrentUser" VerticalAlignment="Center" Foreground="WhiteSmoke"/>
                <Button Cursor="Hand" Margin="15,8,0,5" Width="27" Height="27" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" 
                        BorderBrush="{x:Null}" x:Name="Export" Click="Export_Click">
                    <materialDesign:PackIcon Kind="FileExcel" Width="22" Height="22" RenderTransformOrigin="0.407,0.47"/>
                </Button>
                <Button Cursor="Hand" Margin="15,8,0,5" Width="27" Height="27" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" 
                        BorderBrush="{x:Null}" x:Name="Settings" Click="Settings_Click" >
                    <materialDesign:PackIcon Kind="Settings" Width="22" Height="22" RenderTransformOrigin="0.407,0.47"/>
                </Button>
                <Button Cursor="Hand" Margin="15,8,10,5" Width="27" Height="27" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" 
                        BorderBrush="{x:Null}" Click="Button_Click_1" >
                    <materialDesign:PackIcon Kind="CloseCircleOutline" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>
        <materialDesign:ColorZone Background="#FF5D11A0" Mode="PrimaryMid" Height="54" Margin="0,40,-1.2,0" Grid.RowSpan="2">
            <StackPanel x:Name="stackPanelMainMenu" Orientation="Horizontal" Margin="2"/>
        </materialDesign:ColorZone>
        <Grid x:Name="gridRating" Margin="0,25,-0.2,9.4" 
              Visibility="Hidden">
            <Label Margin="22,78,634.8,437.8" Grid.Row="1" FontSize="20">Вид рейтинга:</Label>
            <ComboBox HorizontalContentAlignment="Center"
            materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}"
            Margin="181,68,0,443.8" x:Name="cbRating"
            HorizontalAlignment="Left" Width="234">
                <ComboBoxItem x:Name="cbItemTotalRating" Selected="cbItemTotalRating_Selected">
                    Общий рейтинг
                </ComboBoxItem>
                <ComboBoxItem x:Name="cbartcoins" Selected="cbartcoins_Selected">
                    Арткоины
                </ComboBoxItem>
                <ComboBoxItem x:Name="cbIntellect" Selected="cbIntellect_Selected">
                    Очки "интеллект"
                </ComboBoxItem>
                <ComboBoxItem x:Name="cbTalents" Selected="cbTalents_Selected">
                    Очки "талант"
                </ComboBoxItem>
                <ComboBoxItem x:Name="cbSocialActivity" Selected="cbSocialActivity_Selected">
                    Очки за соц. активность
                </ComboBoxItem>
            </ComboBox>
            <ListView x:Name="listViewRating"
            Margin="10,129,367.8,9.8"
                      SelectionChanged="listViewRating_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="FIO_teacher"
                        DisplayMemberBinding="{Binding FIO}"
                        Header="ФИО учителя" 
                        Width="250"/>
                        <GridViewColumn x:Name="coin_name"
                        Header="Всего очков" 
                        Width="125">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Coin}" TextAlignment="Center" Width="87"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="buttonTeachersAchievements" Margin="453,514,10,0" Content="Просмотр достижений"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="18" IsEnabled="true" Height="43" Background="#FF5D11A0" 
                    BorderBrush="#FF260940" Click="SignIn_Click" Visibility="Visible"/>
        </Grid>
        <Image x:Name="imageTeachersPhoto" Margin="485,100,9.8,261.8"
                Stretch="Uniform" Width="302" Height="236"/>
        <TextBlock x:Name="textBlockTeachersName" FontSize="17" Margin="491,348,9.8,200.8" 
                   TextWrapping="Wrap"/>
        <TextBlock Text="{Binding Path = Speciality}" x:Name="textBlockTeachersSpeciality"
                   TextWrapping="Wrap" FontSize="15" Margin="491,396,9.8,152.8"/>
        <TextBlock Text="{Binding Path = AboutTeacher}" x:Name="textBlockTeachersInfo" 
                   TextWrapping="Wrap" FontSize="17" Margin="491,444,9.8,73.8" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <Grid x:Name="gridTeachers" Visibility="Hidden" Margin="10,99,9.8,9.8">
            <ListView x:Name="listViewTeachers"
            Margin="10,0,312,10" SelectionChanged="listViewTeachers_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        DisplayMemberBinding="{Binding FIO}"
                        Header="ФИО учителя" 
                        Width="180"/>
                        <GridViewColumn
                        Header="Специальность" 
                        Width="236">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Speciality}" 
                                        TextAlignment="Left" Width="230"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button
                Style="{StaticResource MaterialDesignIconButton}" Click="Button_Click_9"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Margin="395,412,334,19">
                <materialDesign:PackIcon
                    Kind="Add"
                    Height="35"
                    Width="35"/>
            </Button>
            <Image x:Name="imageTeachersCardPhoto" Margin="506,10,29,295.6" Width="242" Height="184"/>
            <TextBlock x:Name="textBlockTeachersCardName" FontSize="17" Margin="487,199,10,237"/>
            <TextBlock Text="{Binding Path = Speciality}" x:Name="textBlockTeachersCardSpeciality" FontSize="15" Margin="487,241,0,197"/>
            <TextBlock Text="{Binding Path = AboutTeacher}" ScrollViewer.VerticalScrollBarVisibility="Visible"
                       x:Name="textBlockTeachersCardInfo" TextWrapping="Wrap" FontSize="17" Margin="487,293,10,106.6"/>
            <Button x:Name="buttonChangeTeacher" Content="Редактировать"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0" Width="136"
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="487,445,154,1.6" Click="buttonChangeTeacher_Click"/>
            <Button x:Name="buttonDeleteTeacher" Content="Удалить" 
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0" 
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="631,445,10,1.6" Click="buttonDeleteTeacher_Click"/>
            <Button x:Name="buttonGrantCoin" Content="Наградить"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0"
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="487,397,10,49.6" Click="buttonGrantCoin_Click"/>
            <materialDesign:ColorZone Height="610" x:Name="colorZoneNewNight" Visibility="Hidden"
            Mode="PrimaryMid" Opacity="0.85"
            Effect="{DynamicResource MaterialDesignShadowDepth5}" 
                Background="#FF373737" Margin="-20,-105,-17,-15.4" HorizontalAlignment="Right" Width="814"/>
            <StackPanel Orientation="Horizontal" Background="#FFFFFFFF"
                        x:Name="stackPanelNewCoinPanel"
                        Margin="235,0,214,135" Visibility="Hidden">
                <Grid Width="300" Margin="8,8,8,8">
                    <Grid.Resources>
                        <Style
                              TargetType="TextBox"
                              BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter
                                    Property="materialDesign:HintAssist.IsFloating"
                                    Value="True" />
                            <Setter
                                    Property="Margin"
                                    Value="8,8,8,8" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                                Width="*" />
                        <ColumnDefinition
                                Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
                                Height="61*" />
                        <RowDefinition
                                Height="15*" />
                        <RowDefinition
                                Height="15*" />
                        <RowDefinition
                                Height="0*" />
                        <RowDefinition
                                Height="98*" />
                        <RowDefinition
                                Height="13*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0"  Grid.Row="0"
                            Margin="11,1,8,37.4"> Добавить коин
                    </TextBlock>
                    <ComboBox x:Name="cbAddCoinType"
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="Тип коина"
                            materialDesign:HintAssist.IsFloating="True"
                            MaxDropDownHeight="200"
                            Margin="10,91,1,7.2" Height="45" Grid.RowSpan="3"/>
                    <ComboBox x:Name="cbGrantCoinEvents"
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="Мероприятие"
                            materialDesign:HintAssist.IsFloating="True"
                            MaxDropDownHeight="200"
                            Margin="10,41,1,10" Height="45"/>
                    <TextBox x:Name="textBoxCommentCoin" Margin="10,19,1,43.2" 
                            Grid.Row="2" materialDesign:HintAssist.Hint="Комментарий"
                            materialDesign:HintAssist.IsFloating="True" Grid.RowSpan="3"/>
                    <Button Background="#FF5D11A0"
                        Content="Добавить"
                        Margin="170,131.8,0,-0.6" Grid.Row="4" Grid.RowSpan="2" 
                            Height="Auto" Click="Button_Click_17"/>
                    <Button Background="#FF5D11A0"
                        Content="Отмена"
                        Margin="11,131.356,159,-0.156" Grid.Row="4" Grid.RowSpan="2" Height="Auto" Click="Button_Click_3"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid x:Name="gridEvents" Visibility="Hidden" Margin="0,94,-0.2,-0.2"
              Grid.RowSpan="2">
            <ListView x:Name="listViewEvents"
            Margin="10,66,241,10" SelectionChanged="listViewEvents_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        DisplayMemberBinding="{Binding Caption}"
                        Header="Название" 
                        Width="250"/>
                        <GridViewColumn
                        Header="Тип" 
                        Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Type}" 
                                        TextAlignment="Left" Width="100"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                        Header="Место" 
                        Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Place}" 
                                        TextAlignment="Left" Width="100"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                        Header="Дата" 
                        Width="77">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date}" 
                                        TextAlignment="Left" Width="77"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button
                Style="{StaticResource MaterialDesignIconButton}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Margin="493,428,256,22" Click="Button_Click_10">
                <materialDesign:PackIcon
                    Kind="Add"
                    Height="35"
                    Width="35"/>
            </Button>
            <TextBlock ScrollViewer.VerticalScrollBarVisibility="Visible"
                x:Name="textBlockEventInfo" TextWrapping="Wrap" FontSize="17" Margin="561,66,10,105"/>
            <Button x:Name="buttonChangeEvent" Content="Изменить"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0"
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="561,448,126,7" Width="110" Click="ChangeEvent_Click"/>
            <Button x:Name="buttonDeleteEvent" Content="Удалить" 
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0" 
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="675,448,10,7" Width="110" Click="DeleteEvent_Click"/>
            <Button x:Name="buttonParticipants" Content="Участники" 
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0" 
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="561,400,10,55" Click="Participants_Click"/>
            <Label FontSize="16" Margin="15,17,740,444">Тип:</Label>
            <ComboBox HorizontalContentAlignment="Center" x:Name="cbEventsType" Text="Все"
                materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}"
                HorizontalAlignment="Left" Width="177" Margin="67,4,0,449"/>
            <Label FontSize="16" Margin="257,17,465,444" RenderTransformOrigin="0.16,0.585">Место:</Label>
            <ComboBox HorizontalContentAlignment="Center" x:Name="cbEventsPlaces" Text="Все"
                materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}"
                HorizontalAlignment="Left" Width="177" Margin="327,4,0,449"/>
            <Button Cursor="Hand" x:Name="SearchEvents"
                Style="{StaticResource MaterialDesignIconButton}" Margin="519,16,246,450" Width="32" Height="32" Click="SearchEvents_Click">
                <materialDesign:PackIcon
                    Kind="Search"
                    Height="20"
                    Width="20"/>
            </Button>
        </Grid>
        <Grid x:Name="gridMessages" Visibility="Hidden"  Margin="0,94,-0.2,-0.2" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal" Margin="5,4,0,439" Cursor="Hand" Width="780">
                <RadioButton
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4,4,3.8,4" x:Name="rbAllMessages"
                    Checked="RadioButton_Checked_3"
                    Content="Все заявки" FontSize="20" Height="44" Width="185"/>
                <RadioButton
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4"
                    IsChecked="False" Checked="RadioButton_Checked_1"
                    Content="Непрочитанные" FontSize="20" Height="44" Width="185"/>
                <RadioButton
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4"
                    IsChecked="False"
                    Content="Принятые" FontSize="20" Height="44" Width="185" Checked="RadioButton_Checked"/>
                <RadioButton
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4"
                    IsChecked="False" Checked="RadioButton_Checked_2"
                    Content="Отклонённые" FontSize="20" Height="44" Width="185"/>
            </StackPanel>
            <ListView x:Name="listViewAdminMessageBox"
            Margin="10,64,10,68" SelectionChanged="listViewAdminMessageBox_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        DisplayMemberBinding="{Binding Teacher}"
                        Header="ФИО" 
                        Width="250"/>
                        <GridViewColumn
                        Header="Мероприятие" 
                        Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Event}" 
                                        TextAlignment="Left" Width="250"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                        Header="Дата" 
                        Width="77">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date}" 
                                        TextAlignment="Left" Width="77"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                        Header="Статус" 
                        Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}" 
                                        TextAlignment="Left" Width="100"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="buttonAcceptRequest" Content="Принять заявку"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0"
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="616,450,10,10" Width="172" Click="Accept_Click"/>
            <Button x:Name="buttonDeclineRequest" Content="Отклонить заявку"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="15" IsEnabled="true" Height="43" Background="#FF5D11A0"
                    BorderBrush="#FF260940" Visibility="Hidden" Margin="429,450,195,10" Width="172" Click="Decline_Click"/>
        </Grid>
        <Grid x:Name="gridBackgroundZone" Visibility="Hidden" Margin="0,0,-0.2,-0.2" Grid.RowSpan="2">
            <materialDesign:ColorZone Height="600" x:Name="colorZoneNight" Visibility="Visible"
            Mode="PrimaryMid" Opacity="0.85"
            Effect="{DynamicResource MaterialDesignShadowDepth5}" 
                Background="#FF373737" Margin="0,0,0,-3" HorizontalAlignment="Right" Width="797"/>
            <Grid Background="#FFE4E4E4" Margin="70,70,70,70" 
                  x:Name="gridBackPanel" Visibility="Visible">
                <Button Cursor="Hand" Margin="623,8,8,425.8" Width="27" Height="27" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" >
                    <materialDesign:PackIcon Kind="CloseCircleOutline" Width="22" Height="22" Foreground="#FF5D11A0"/>
                </Button>
            </Grid>
        </Grid>
        <Grid x:Name="gridCoins" Visibility="Hidden" Margin="0,0,-0.2,-0.6" Grid.RowSpan="2" >
            <ListView x:Name="listViewCoinsList" ScrollViewer.VerticalScrollBarVisibility="Visible"
          ScrollViewer.CanContentScroll="True" 
             SelectionChanged="listViewCoinsList_SelectionChanged" Margin="82,82,355,79">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        DisplayMemberBinding="{Binding Type}"
                        Header="Тип награды" 
                        Width="170"/>
                        <GridViewColumn
                        Header="Мероприятие" 
                        Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Party}" 
                                        TextAlignment="Left" Width="150"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid x:Name="gridCoinsImg" Margin="0,0,0,488">
                <Label Margin="454,176,280.8,-97.2" Content="{Binding Artcoins}"
                       HorizontalContentAlignment="Center"/>
                <Image Margin="454,113,280.8,-79" Height="62" Width="62" Source="/Resources/Coins/artcoin.png" RenderTransformOrigin="0.702,0.478"></Image>
                <Label Margin="588,176,146.8,-97.2" Content="{Binding SocActive}"
                       HorizontalContentAlignment="Center" Width="62"/>
                <Image Margin="588,113,146.8,-79" Height="62" Width="62" Source="/Resources/Coins/social_activity.png"/>
                <Label Margin="654,176,80.8,-97.2" Content="{Binding Talents}"
                       HorizontalContentAlignment="Center"/>
                <Image Margin="521,113,213.8,-79" Height="62" Width="62" Source="/Resources/Coins/intellect.png"/>
                <Label Margin="521,176,213.8,-97.2" Content="{Binding Intellect}"
                       HorizontalContentAlignment="Center" Width="62"/>
                <Image Margin="654,113,80.8,-79" Height="62" Width="62" Source="/Resources/Coins/talent.png"></Image>
            </Grid>
            <Grid x:Name="EventBlocks" Margin="0,0,0,488">
                <TextBlock x:Name="textBlockCoinsEvent" FontSize="20" Margin="454,232,80.8,-186.2"
                         TextWrapping="Wrap" />
                <TextBlock x:Name="textBlockCoinsDescription" FontSize="16" Margin="454,300,80.8,-320.2"
                          TextWrapping="Wrap"/>
                <TextBlock x:Name="textBlockCoinsPlace" Height="35" FontSize="20" Margin="564,431,80.8,-357.2"></TextBlock>
                <TextBlock x:Name="textBlockCoinsDate" Height="35" FontSize="20" Margin="454,431,237.8,-357.2"></TextBlock>

                <Button x:Name="addCoin" Content="Наградить"
                    FontFamily="Segoe UI" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    FontSize="18" IsEnabled="true" Height="43" Background="#FF5D11A0" 
                    BorderBrush="#FF260940" Click="addCoin_Click_1" Visibility="Visible" Margin="454,472,80.8,-406.2"/>
                <Button
                Style="{StaticResource MaterialDesignIconButton}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                Margin="366,459,380.8,-400.2" Height="50" Width="50" Click="Button_Click_2" Foreground="#FF5D11A0">
                    <materialDesign:PackIcon
                    Kind="Trash"
                    Height="35"
                    Width="35"/>
                </Button>
            </Grid>
            <StackPanel Orientation="Horizontal" Background="#FFFFFFFF"
                        x:Name="stackPanelNewCoin"
                        Margin="235,127,235,135" Visibility="Hidden">
                <Grid Width="300" Margin="8,8,8,8">
                    <Grid.Resources>
                        <Style
                              TargetType="TextBox"
                              BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter
                                    Property="materialDesign:HintAssist.IsFloating"
                                    Value="True" />
                            <Setter
                                    Property="Margin"
                                    Value="8,8,8,8" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                                Width="*" />
                        <ColumnDefinition
                                Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
                                Height="61*" />
                        <RowDefinition
                                Height="15*" />
                        <RowDefinition
                                Height="15*" />
                        <RowDefinition
                                Height="0*" />
                        <RowDefinition
                                Height="98*" />
                        <RowDefinition
                                Height="13*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0"  Grid.Row="0"
                            Margin="11,1,8,37.4"> Добавить коин
                    </TextBlock>
                    <ComboBox x:Name="cbTypeOfCoin"
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="Тип коина"
                            materialDesign:HintAssist.IsFloating="True"
                            MaxDropDownHeight="200"
                            Margin="10,91,1,7.2" Height="45" Grid.RowSpan="3"/>
                    <ComboBox x:Name="cbEvents"
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="Мероприятие"
                            materialDesign:HintAssist.IsFloating="True"
                            MaxDropDownHeight="200"
                            Margin="10,41,1,10" Height="45"/>
                    <TextBox x:Name="textBoxComment" Margin="11,10.356,0,28.044" 
                            Grid.Row="4" materialDesign:HintAssist.Hint="Комментарий"
                            materialDesign:HintAssist.IsFloating="True"/>
                    <Button Background="#FF5D11A0"
                        Content="Добавить"
                        Margin="170,131.8,0,-0.6" Grid.Row="4" Grid.RowSpan="2" 
                            Height="Auto" Click="Button_Click_4"/>
                    <Button Background="#FF5D11A0"
                        Content="Отмена"
                        Margin="11,131.356,159,-0.156" Grid.Row="4" Grid.RowSpan="2" Height="Auto" Click="Button_Click_3"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid x:Name="gridTeacherPage" Margin="0,0,-0.2,-0.2" Grid.RowSpan="2">
            <materialDesign:ColorZone Height="600" x:Name="colorZoneTeacherPage"
            Mode="PrimaryMid" Opacity="0.85" Visibility="Hidden"
            Effect="{DynamicResource MaterialDesignShadowDepth5}" 
                Background="#FF373737" Margin="0,0,0,-3" HorizontalAlignment="Right" Width="797"/>
            <StackPanel Orientation="Horizontal" Background="#FFFFFFFF" x:Name="stackPanelTeacherPanel"
                        Margin="134,100,134,100" Visibility="Hidden">
                <Grid Width="300" Margin="8,8,8,8">
                    <Grid.Resources>
                        <Style
                              TargetType="TextBox"
